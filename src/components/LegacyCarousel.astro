---
// LegacyCarousel.astro
import { Image } from "astro:assets";
import home3 from "../assets/Homepage/Home 3.png";
import home4 from "../assets/Homepage/Home 4.png";
import home7 from "../assets/Homepage/Home 7.png";

const images = [home3, home4, home7];
---

<div id="carousel">
  {
    images.map((img, index) => (
      <Image class="slide" src={img} alt={`Process image ${index + 1}`} />
    ))
  }
</div>

<style>
  /* The carousel fills its containerâ€™s width */
  #carousel {
    position: relative;
    width: 100%;
    /* Maintain the original 400x600 (2:3) aspect ratio */
    aspect-ratio: 400 / 600;
    overflow: hidden;
  }

  .slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 1500ms ease-in-out;
  }

  .slide.active {
    opacity: 1;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const slides = document.querySelectorAll(".slide");
    let currentIndex = 0;
    let timer: number;

    function showSlide(index: number) {
      slides.forEach((slide) => slide.classList.remove("active"));
      slides[index].classList.add("active");
      currentIndex = index;
    }

    function nextSlide() {
      const nextIndex = (currentIndex + 1) % slides.length;
      showSlide(nextIndex);
    }

    function startTimer() {
      timer = setInterval(nextSlide, 2500);
    }

    function resetTimer() {
      clearInterval(timer);
      startTimer();
    }

    // Initialize slideshow
    showSlide(0);
    startTimer();
  });
</script>
