---
const { image, title, description } = Astro.props;
import { Image } from "astro:assets";
---

<div>
  <!-- need to make image responsive  -->
  <Image src={image} alt="image" width={408} height={408} />
  <h4>{title}</h4>
  <p>{description}</p>
</div>

<style>
  div {
    flex: 1 1 0;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    align-items: flex-start;
    padding: 3rem 2.75rem;
    border: 1px solid #bababa;
  }
  h4,
  p {
    color: #1b1b1c;
    font-family: "General Sans", serif;
    font-style: normal;
  }
  h4 {
    font-weight: 600;
    margin-top: 0.5rem;
    font-size: 1.7rem;
    line-height: 120%;
  }
  p {
    font-weight: 300;
    font-size: 1.2rem;
    line-height: 160%;
    text-align: left;
  }
</style>
