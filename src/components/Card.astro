---
const { image, title, description } = Astro.props;
import { Image  } from "astro:assets";
import logo from "../assets/logo.png";
---
<div>
    <!-- need to     make image responsive  -->
    <Image src={image} alt="image" width={400} height={400} /> 
    <h3>{title}</h3>
    <p>{description}</p>
</div>

<style>
    div {
        flex: 1 1 0;
        display: flex;
        flex-direction: column;
        gap: 1.8rem;
        align-items: flex-start;
        padding: 3.6rem;
        border: 1px solid #BABABA;
    }
    h3, p {
        color: #1B1B1C;
        font-family: "General Sans";
        font-style: normal;
        font-weight: 400;        
    }
    h3 {
        margin-top: 0.6rem;
        font-size: 1.8rem;
        line height: 120%;
    }
    p {
        font-size: 1.2rem;
        line-height: 160%;
    }
</style>
