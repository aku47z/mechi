---
import "@fontsource/montserrat/400.css";
import { Image } from "astro:assets";
import darkLogo from "../assets/logo-dark.svg";
import lightLogo from "../assets/logo-light.svg";
const { theme } = Astro.props;
let themeColor = "#1b1b1c";
let logo = lightLogo;
if (theme == "dark") {
  themeColor = "white";
  logo = darkLogo;
}
---

<nav>
  <div class="tab-group">
    <a href="/about">About</a>
    <a href="/product">Product</a>
  </div>
  <a href="/" id="logo">
    <Image
      src={logo}
      alt="Mechi Surshar Carpets Logo"
      class="img"
      height={160}
      loading="eager"
    />
    <h1>MECHI SURSHAR<br />CARPET INDUSTRIES</h1>
  </a>
  <div class="tab-group">
    <a href="/process">Process</a>
    <a href="/contact">Contact</a>
  </div>
</nav>

<style define:vars={{ themeColor }}>
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 3.75rem 2rem 3.75rem;
  }

  .tab-group {
    display: flex;
    justify-content: space-between;
    flex: 1;
    max-width: 12.75rem;
    font-family: "Cormorant Garamond";
    font-size: 1.1rem;
    font-style: normal;
    font-weight: 300;
    line-height: normal;
  }

  a {
    text-decoration: none;
    color: var(--themeColor);
  }

  #logo {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  h1 {
    color: var(--themeColor);
    margin-top: -0.5rem;
    font-family: "Montserrat", "General Sans", sans-serif !important;
    font-size: 0.9rem;
    font-style: normal;
    font-weight: 400;
    line-height: 130%;
    text-align: center;
  }

  .img {
    height: 160px;
  }

  @media screen and (max-width: 480px) {
    nav {
      padding: 0.5rem 1.5rem;
      display: flex;
      justify-content: center;
    }

    h1 {
      font-size: 0.5rem;
      margin-top: 0.5px;
    }

    .img {
      height: 6rem;
      margin-left: -15px;
      margin-right: -15px;
    }

    .tab-group {
      display: flex;
      justify-content: space-around;
      gap: 0.5rem;
      font-size: 0.875rem;
    }
  }
</style>
