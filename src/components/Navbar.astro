---
import '@fontsource/montserrat/400.css';
import '@fontsource/montserrat/700.css';
import { Image } from 'astro:assets';
import logo from '../assets/logo.png';
---
<header>
    <nav>
        <div class="tab-group">
            <a href="/about">About</a>
            <a href="/product">Product</a>
        </div>
        <a href="/" id="logo">
            <Image src={logo} alt="logo" />
            <h4 style="font-weight: 700;">MECHI SURSHAR</h4>
            <h4 style="font-weight: 400;">CARPET INDUSTRIES</h4>
        </a>
        <div class="tab-group">
            <a href="/process">Process</a>
            <a href="/contact">Contact</a>
        </div>
    </nav>
</header>

<style>
    header {
        background-color: #121212;
        padding: 1.8rem 0;
    }

    nav {
        display: flex;
        gap: 1.8rem;
        justify-content: space-evenly;
        align-items: center;
        padding: 0 1.8rem;
    }

    .tab-group {
        display: flex;
        gap: 1.8rem;
        font-family: 'General Sans', sans-serif;
        font-size: 1.2rem;
        font-weight: 400;
    }

    a {
        padding: 0 1.2rem;
        color: white;
        text-decoration: none;
    }

    #logo {
        display: flex;
        flex-direction: column;
    }

    img {
        height: 10.875rem;
        width: 11.325rem;
    }

    h4 {
        color: #C6C6C6;
        text-align: center;
        font-family: 'Montserrat', sans-serif;
        font-size: 1rem;
        line-height: 130%;
    }
</style>
