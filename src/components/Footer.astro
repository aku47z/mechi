<style>
    footer {
        background-color: #FFFDFD;
        color: black;
        padding: 4.8rem 6rem;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    #info {
        display: flex;
        gap: 4.8rem;
        justify-content: space-evenly;
        font-family: 'General Sans', sans-serif;
        flex-wrap: wrap;
    }

    #sub-info {
        display: flex;
        flex: auto;
        flex-direction: column;
        gap: 1.8rem;
        align-items: flex-start;
        font-size: 1rem;
        line-height: 150%;
        letter-spacing: -0.0195rem;
    }

    h4, ul {
        font-weight: 600;
    }

    p {
        font-weight: 400;
    }

    ul {
        list-style-type: none;
        text-decoration: none;
        display: flex;
        flex: auto;
        flex-direction: column;
        gap: 0.9rem;
        justify-content: flex-start;
        font-size: 1rem;
    }

    a {
        text-decoration: none;
        color: black;
    }

    #credits {
        font-family: 'General Sans', sans-serif;
        font-size: 1rem;
        line-height: 150%;
        letter-spacing: -0.0195rem;
        display: flex;
        justify-content: space-between;
        gap: 3rem;
        flex-wrap: wrap;
    }
</style>
