---
import "@fontsource/montserrat/400.css";
import logo from "../assets/logo.png";
import Button from "./Button.astro";
---

<div id="modal">
  <div class="modal-content">
    <span class="close" id="closeModal">&times;</span>
    <h3>CUSTOMIZE YOUR RUG WITH US!</h3>
    <p>
      Send us your custom request, our team will create a free digital rendering
      and send you a quotation within 2 business days.
    </p>
    <p>
      If you have any questions or need assistance, feel free to reach out to
      us.
    </p>
    <img src={logo.src} alt="logo" height={200} class="img" />
    <p id="logo">
      MECHI SURSHAR
      <br />CARPET INDUSTRIES
    </p>
    <Button link="/custom" text="Request a custom sample" color="#1b1b1c" />
  </div>
</div>

<style>
  #modal {
    display: none;
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }

  #modal.open {
    display: flex;
    animation: fadeIn 0.4s ease-out forwards;
  }

  .modal-content {
    background: #fff;
    padding: 5rem 10rem;
    max-width: 50rem;
    width: 90%;
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    justify-content: center;
    align-items: center;
    text-align: center;
    transform: scale(0.8) translateY(20px);
    opacity: 0;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  #modal.open .modal-content {
    transform: scale(1) translateY(0);
    opacity: 1;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  .close {
    position: absolute;
    top: 0.5rem;
    right: 1rem;
    font-size: 1.5rem;
    cursor: pointer;
    color: #656569;
    transition: color 0.2s ease;
    z-index: 1001;
  }

  a {
    margin-top: 1.5rem;
    color: #656569;
    font-family: "General Sans", sans-serif;
    font-size: 1rem;
    font-style: normal;
    font-weight: 400;
    line-height: 120%;
    letter-spacing: -0.015rem;
  }
  #logo {
    margin-top: -2rem;
    color: #6c6c6c;
    text-align: center;
    font-family: "Montserrat", "General Sans", sans-serif;
    font-size: 1rem;
    font-style: normal;
    font-weight: 400;
    line-height: 120%;
  }

  @media screen and (max-width: 768px) {
    .modal-content {
      padding: 2rem;
    }

    .close {
      font-size: 1rem;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const modal = document.getElementById("modal");
    const closeBtn = document.getElementById("closeModal");

    // Close modal when clicking the X button
    closeBtn?.addEventListener("click", function () {
      modal?.classList.remove("open");
      setTimeout(() => {
        if (modal) modal.style.display = "none";
      }, 300);
    });
  });
</script>
